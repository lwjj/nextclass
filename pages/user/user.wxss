/* pages/user/user.wxss */
.user{
  padding: 0 24rpx;
}
.top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 50rpx 0;

}
.top image{
  width:140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.center{
  padding-top: 100rpx;
}
.center .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  padding: 20rpx 0;
  font-size: 14px;
}
.right{
  float: right;
}
.nologin{
  font-size: 18px;
  float: right;
  
}
.pic{
  display: flex;
  align-items: center;
}
.more{
  font-size: 14px;
  color:#999;
  padding-top: 10rpx;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background:rgba(0,0,0, 0.8);
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 560rpx;
  height: 400rpx;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 15rpx;
}

.modal-title {
  padding: 30rpx 0;
  border-bottom: 1px solid #ccc;
  font-size: 32rpx;
  color: #999;
  text-align: center;
}
.modal-title2{
  padding: 40rpx 40rpx;
  line-height: 1.6;
  border-bottom: none;
}
.modal-content {
  
}

.modal-input-item {
  display: flex;
  align-items: center;
  
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.btn{
  width: 70%;
  margin: 30rpx auto;
  height: 40rpx;
  text-align: center;
  
 }
.btn button{
 height: 80rpx;
 background: #efc925;
 color:#fff;
 font-size: 16px;
 border-radius: 20px;
}
.btn text{
  font-size: 12px;
  color:#999;

}
.btn2{
  width: 90%;
   margin: 30rpx auto;
  height: 40rpx;
  text-align: center;
}
.btn2 button{
 height: 80rpx;
 color:#fff;
 font-size: 16px;
 border-radius: 20px;
}
.btn2 button:nth-of-type(2){
   background: #444;
   margin-top: 30rpx;
}
.close{
  position: absolute;
  top:20rpx;
  right:20rpx;
  font-size:14px;
  color:#999;

}